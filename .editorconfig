root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab

[*.js]
indent_size = 2
max_line_length = 100

[*.md]
indent_style = space
indent_size = 4
max_line_length = 80
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2
